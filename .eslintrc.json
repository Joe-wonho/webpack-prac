{
  "env": {
    "browser": true,
    "es6": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier", "react"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto" },
      "error",
      { "singleQuote": true, "parser": "flow" }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "quotes": ["off", "single"]
  }
}
